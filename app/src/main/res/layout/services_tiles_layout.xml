<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/mainCV"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        fresco:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <RelativeLayout
                android:id="@+id/service_card_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iconHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    fresco:actualImageScaleType="centerInside"
                    />

                <TextView
                    android:id="@+id/titleAlphabet"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle_notification_count"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="D"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/titleGV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="none"
                android:paddingTop="25dp"
                android:paddingLeft="20dp"
                android:text="Drugs Store"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>